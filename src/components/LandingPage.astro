</div>

<style>
  .landing-container {
    min-height: 100vh;
    background: var(--color-background);
    color: var(--color-foreground);
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    padding: 4rem 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      oklch(0.56 0.18 268 / 0.15) 0%,
      transparent 70%
    );
    pointer-events: none;
    z-index: 0;
  }

  .dark .hero-section::before {
    background: radial-gradient(
      circle,
      oklch(0.52 0.27 276.98 / 0.2) 0%,
      transparent 70%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-muted);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 2rem;
    color: var(--color-foreground);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-primary);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
  }

  .hero-gradient {
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      oklch(0.65 0.2 290) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-muted-foreground);
    margin: 0 0 3rem 0;
    max-width: 700px;
  }

  /* Code Preview */
  .code-preview {
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px -20px oklch(0 0 0 / 0.3);
    margin-top: 3rem;
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--color-muted);
    border-bottom: 1px solid var(--color-border);
  }

  .code-dots {
    display: flex;
    gap: 0.5rem;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-border);
  }

  .code-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-muted-foreground);
  }

  .code-content {
    padding: 1.5rem 1.25rem;
    overflow-x: auto;
  }

  .code-content pre {
    margin: 0;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .code-content code {
    color: var(--color-foreground);
  }

  .code-keyword {
    color: oklch(0.65 0.2 290);
  }

  .code-string {
    color: oklch(0.63 0.17 146.8);
  }

  .code-punctuation {
    color: var(--color-muted-foreground);
  }

  .code-decorator {
    color: oklch(0.6 0.2 35);
  }

  .code-boolean {
    color: var(--color-primary);
  }

  /* Features Section */
  .features-section {
    padding: 6rem 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    position: relative;
    padding: 2.5rem;
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .feature-card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 16px;
    padding: 1px;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      transparent 50%,
      transparent 100%
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -20px oklch(0.56 0.18 268 / 0.3);
    border-color: var(--color-primary);
  }

  .feature-icon {
    font-size: 3rem;
    line-height: 1;
  }

  .feature-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: var(--color-foreground);
  }

  .feature-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-muted-foreground);
    margin: 0;
    flex: 1;
  }

  .feature-cta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    color: var(--color-primary);
    margin-top: auto;
  }

  .feature-card:hover .feature-cta {
    gap: 0.75rem;
  }

  .feature-cta svg {
    transition: transform 0.3s ease;
  }

  .feature-card:hover .feature-cta svg {
    transform: translateX(4px);
  }

  /* Quick Links Section */
  .quick-links-section {
    padding: 4rem 1.5rem 6rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .quick-links-content {
    background: linear-gradient(
      135deg,
      var(--color-card) 0%,
      var(--color-muted) 100%
    );
    border: 1px solid var(--color-border);
    border-radius: 20px;
    padding: 4rem 3rem;
  }

  .quick-links-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin: 0 0 3rem 0;
  }

  .quick-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2.5rem;
  }

  .quick-link-item {
    text-align: center;
  }

  .quick-link-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: var(--color-primary-foreground);
    border-radius: 12px;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1rem;
  }

  .quick-link-item h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .quick-link-item p {
    font-size: 0.9375rem;
    color: var(--color-muted-foreground);
    margin: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 1rem;
    }

    .features-section {
      padding: 3rem 1rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .quick-links-content {
      padding: 3rem 1.5rem;
    }

    .quick-links-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .code-preview {
      font-size: 0.8125rem;
    }
  }
</style>
