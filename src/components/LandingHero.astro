---
interface Props {
  title?: string;
  tagline?: string;
}

const { title, tagline } = Astro.props;
---

<div class="landing-container">
  {title && (
    <header class="landing-header">
      <h1 class="landing-title">{title}</h1>
      {tagline && <p class="landing-tagline">{tagline}</p>}
    </header>
  )}

  <slot />
</div>

<style is:global>
  /* Override Starlight's default content styles for landing page */
  .splash .sl-markdown-content {
    max-width: 100%;
  }

  .splash .sl-markdown-content > h1:first-child {
    display: none;
  }

  /* Hide title that Starlight generates for splash pages */
  .splash h1.page-title {
    display: none;
  }
</style>

<style>
  .landing-container {
    display: flex;
    flex-direction: column;
    gap: 64px;
    max-width: 1600px;
    margin: 0 auto;
    padding: 2rem 2rem 3rem;
    width: 100%;
  }

  .landing-header {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-top: 1rem;
  }

  .landing-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    line-height: 1.1;
    font-weight: 700;
    margin: 0;
    color: var(--sl-color-white);
    letter-spacing: -0.02em;
  }

  .landing-tagline {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    line-height: 1.6;
    color: var(--sl-color-gray-2);
    margin: 0;
    max-width: 70ch;
  }

  @media (min-width: 1024px) {
    .landing-container {
      gap: 80px;
      padding: 3rem 3rem 4rem;
    }

    .landing-header {
      gap: 20px;
      padding-top: 2rem;
    }
  }

  @media (max-width: 768px) {
    .landing-container {
      gap: 40px;
      padding: 1.5rem 1.25rem 2rem;
    }

    .landing-header {
      gap: 12px;
      padding-top: 0;
    }
  }
</style>
