---
import Search from "@astrojs/starlight/components/Search.astro";
import SiteTitle from "@astrojs/starlight/components/SiteTitle.astro";
import Button from "@components/Button.astro";
import ThemeSelect from "@components/ThemeSelect.astro";

// Get the current path to highlight active nav item
const currentPath = Astro.url.pathname;
---

<div class="header">
  <div class="left-group">
    <div class="title-wrapper flex">
      <SiteTitle {...Astro.props} />
    </div>
  </div>

  <div class="top-container">
    <Search {...Astro.props} />
  </div>

  <div class="hidden md:flex print:hidden right-group">
    <ThemeSelect />
    <Button href="mailto:feedback@yourdomain.com" variant="outline">
      Feedback
    </Button>
    <Button href="https://app.yourdomain.com" target="_blank" variant="accent">
      Dashboard
    </Button>
  </div>
</div>

<div class="secondary-nav-tabs">
  <ul>
    <li class:list={[{ active: currentPath.startsWith("/start") }]}>
      <a
        href="/start/"
        class="stl-ui-button stl-ui-button--ghost not-content stl-ui-not-prose stl-active-secondary-link"
        >Start</a
      >
    </li>
    <li class:list={[{ active: currentPath.startsWith("/deploy") }]}>
      <a
        href="/deploy/"
        class="stl-ui-button stl-ui-button--ghost not-content stl-ui-not-prose stl-active-secondary-link"
        >Deploy</a
      >
    </li>
    <li class:list={[{ active: currentPath.startsWith("/components") }]}>
      <a
        href="/components/"
        class="stl-ui-button stl-ui-button--ghost not-content stl-ui-not-prose stl-active-secondary-link"
        >Components</a
      >
    </li>
  </ul>
</div>

<style>
  header {
    z-index: var(--sl-z-index-navbar);
    position: fixed;
    inset-inline-start: 0;
    inset-block-start: 0;
    width: 100%;
    height: var(--sl-nav-height);
    border-bottom: 1px solid var(--sl-color-hairline-shade);
    padding: var(--sl-nav-pad-y) var(--sl-nav-pad-x);
    padding-inline-end: var(--sl-nav-pad-x);
    border-bottom: 1px solid var(--color-border);
    background-color: var(--color-background);
  }

  .header {
    background-color: var(--color-background);
    display: flex;
    gap: var(--sl-nav-gap);
    justify-content: space-between;
    align-items: center;
    height: 100%;
    width: 100%;
    max-width: var(--sl-page-max-width);
    margin: 0 auto;
  }

  @media (min-width: 50rem) {
    .header {
      padding-inline-start: 0;
      padding-inline-end: 0;
    }
  }

  header {
    &.header {
      border-bottom-color: var(--sl-color-hairline);
    }
  }

  .header-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--sl-nav-gap);
    padding: 0.75rem 1rem;
  }

  .left-group {
    display: flex;
    align-items: center;
  }

  .title-wrapper {
    display: flex;
    align-items: center;
  }

  .top-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    max-width: 600px;
  }

  .right-group {
    gap: 0.75rem;
    align-items: center;
  }

  .secondary-nav-tabs {
    display: none;
    width: 100%;
    max-width: var(--sl-page-max-width);
    margin: 0 auto;
  }

  .secondary-nav-tabs nav {
    padding: 0 1rem;
  }

  .secondary-nav-tabs ul {
    display: flex;
    align-items: center;
    padding: 0;
    list-style: none;
    margin-bottom: -1px;
    gap: 4px;
  }

  .secondary-nav-tabs li {
    padding-bottom: 1px;
    border-bottom: 2px solid transparent;
    margin-bottom: -1px;
  }

  .secondary-nav-tabs li.active {
    border-color: var(--color-text-accent);
  }

  .secondary-nav-tabs li:not(:last-child) {
    margin-inline-end: 12px;
  }

  .secondary-nav-tabs {
    & li {
      .stl-ui-button {
        border-width: 0;
        padding: 8px 12px;
        margin-inline: -12px;
      }
    }
  }

  .secondary-nav-tabs a {
    display: block;
    padding: 0.5rem 0.75rem;
    font-size: var(--sl-text-sm);
    font-weight: 500;
    text-decoration: none;
    color: var(--sl-color-gray-2);
    transition: color 0.2s;
    white-space: nowrap;
  }

  .secondary-nav-tabs li.active a {
    color: var(--sl-color-white);
  }

  .secondary-nav-tabs a:hover {
    color: var(--sl-color-white);
  }

  @media (min-width: 50rem) {
    :root {
      --sl-nav-height: 88px;
    }

    .header {
      padding-inline-start: 0;
      padding-inline-end: 0;
    }

    .secondary-nav-tabs {
      display: block;
    }

    .top-container {
      justify-content: center;
    }
  }

  @media (max-width: 50rem) {
    .header-top {
      flex-wrap: wrap;
    }

    .top-container {
      order: 3;
      width: 100%;
      max-width: 100%;
      margin-top: 0.5rem;
    }

    .secondary-nav-tabs {
      overflow-x: auto;
    }

    .secondary-nav-tabs ul {
      min-width: min-content;
    }
  }
</style>
